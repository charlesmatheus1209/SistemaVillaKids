@model int

@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-2"></div>
    <div class="col-8 align-content-center">
        <h2 class="text-center">Deseja realmente Excluir o <span class="text-danger">@BancoDeDados.GetCrianca(@Model).Nome</span> ?</h2>   

        <form asp-action="ExclusaoReal" method="get">
            <button asp-action="ExclusaoReal" asp-route-id="@Convert.ToDouble(@Model)" class="btn btn-success btn-lg btn-block" type="submit">Sim</button>
        </form>

        <form asp-action="ListaDeCadastros" method="get">
            <button class="btn btn-danger btn-lg btn-block" type="submit">Não</button>
        </form>

    </div>
    <div class="col-2"></div>
</div>

