@model Crianca

@{
Layout = "_Layout";
}

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <table class="table table-striped table-hover table-responsive-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Informações</th>
                </tr>                    
            </thead>
            <tbody>
                <tr>
                    <td class="align-middle"><b>Identificador</b></td>
                    <td class="align-middle">@Model.Id</td>
                </tr>
                <tr>
                    <td class="align-middle"><b>Nome</b></td>
                    <td class="align-middle">@Model.Nome</td>
                </tr>

                <tr>
                    <td class="align-middle"><b>Data de Nascimento</b></td>
                    <td class="align-middle">@Model.DataDeNascimento.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <td class="align-middle"><b>Idade</b></td>
                    <td class="align-middle">@Model.GetIdade().ToString("0.0")</td>
                </tr>
                <tr>
                    <td class="align-middle"><b>Responsaveis</b></td>
                    <td class="align-middle">@Model.Responsaveis</td>
                </tr>
                   
            </tbody>
        </table>
        </div>
    <div class="col-3"></div>
</div>
